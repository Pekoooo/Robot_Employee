<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">


    <ImageView
        android:id="@+id/employee_list_profile_picture"
        android:layout_width="@dimen/smartphone_standard_profile_picture_dimen"
        android:layout_height="@dimen/smartphone_standard_profile_picture_dimen"
        android:src="@drawable/square_employee_picture_small"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/employee_list_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:text="@string/dummy_employee_name"
        android:textColor="@color/CustomBlue"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/employee_list_team"
        app:layout_constraintStart_toEndOf="@+id/employee_list_profile_picture"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/employee_list_team"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:text="@string/dummy_employee_team"
        android:textColor="@color/CustomWhiteBlue"
        app:layout_constraintBottom_toTopOf="@id/employee_list_email"
        app:layout_constraintStart_toEndOf="@+id/employee_list_profile_picture"
        app:layout_constraintTop_toBottomOf="@+id/employee_list_name" />

    <TextView
        android:id="@+id/employee_list_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:text="@string/dummy_employee_email"
        android:textColor="@color/CustomWhiteBlue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/employee_list_profile_picture"
        app:layout_constraintTop_toBottomOf="@+id/employee_list_team" />


</androidx.constraintlayout.widget.ConstraintLayout>